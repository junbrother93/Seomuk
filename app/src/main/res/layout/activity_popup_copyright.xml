<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#787878">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:text="앱 정보"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="7pt"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/copyright_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="4dp"
                    android:onClick="onClick"
                    android:src="@drawable/x" />
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 앱에는 우아한형제들에서 제공한 배달의민족 [도현체]와 [주아체]와 [한나는11살체]가 적용되어 있습니다"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="6pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="이 앱에는 티몬에서 제공한 [몬소리체]와 [티움체]가 적용되어 있습니다"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="6pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="이 앱에는 서울특별시에서 제공한 서울 열린 데이터 광장의 [서울안심먹거리 목록 정보]와 [서울시 지정·인증업소 현황] API를 사용하고 있습니다."
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="6pt"/>

    </LinearLayout>

</LinearLayout>
