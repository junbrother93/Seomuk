<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/background">
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.junhyeong.myapplication.Google.MapsActivity" />

        <ImageView
            android:id="@+id/noMap"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:src="@drawable/nomap"
            android:visibility="invisible" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="상세내용"
            android:textSize="8pt" />

        <ImageView
            android:id="@+id/FavorBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/favor"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/TelBtn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/tel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/FavorBtn"
            android:layout_toStartOf="@+id/FavorBtn" />

        <ImageView
            android:id="@+id/ReviewBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:src="@drawable/review"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/TelBtn"
            android:layout_toStartOf="@+id/TelBtn" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/Gridlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:text="업체 명 : " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:text="주소 : " />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="인증 구분 :  " />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="평점 : " />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="8pt"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:text="" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="8pt"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:text="5.0/5.0" />

    </GridLayout>
</LinearLayout>