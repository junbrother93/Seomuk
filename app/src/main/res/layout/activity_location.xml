<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_rowWeight="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/Txt_Loc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="#787878"
            android:paddingTop="10dp"
            android:text="지역 선택"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="8pt"
            android:textStyle="bold" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_gravity="center|top">

                <ImageView
                    android:id="@+id/local1"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowWeight="0.3"
                    android:onClick="onClick"
                    android:src="@drawable/gangseo"
                    android:text="강서구" />

                <ImageView
                    android:id="@+id/local2"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:src="@drawable/gangnam"
                    android:onClick="onClick"
                    android:text="강남구" />

                <ImageView
                    android:id="@+id/local3"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:onClick="onClick"
                    android:src="@drawable/gangdong"
                    android:text="강동구" />

            <ImageView
                    android:id="@+id/local4"
                android:layout_width="115dp"
                android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:onClick="onClick"
                    android:src="@drawable/gangbuk"
                    android:text="강북구" />

                <ImageView
                    android:id="@+id/local5"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:onClick="onClick"
                    android:src="@drawable/gwanak"
                    android:text="관악구" />

                <ImageView
                    android:id="@+id/local6"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:onClick="onClick"
                    android:src="@drawable/gwangjin"
                    android:text="광진구" />


            <ImageView
                    android:id="@+id/local7"
                android:layout_width="115dp"
                android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:onClick="onClick"
                    android:src="@drawable/guro"
                    android:text="구로구" />

                <ImageView
                    android:id="@+id/local8"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:onClick="onClick"
                    android:src="@drawable/geumcheon"
                    android:text="금천구" />

                <ImageView
                    android:id="@+id/local9"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:onClick="onClick"
                    android:src="@drawable/nowon2"
                    android:text="노원구" />

                <ImageView
                    android:id="@+id/local10"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:onClick="onClick"
                    android:src="@drawable/dobong"
                    android:text="도봉구" />

                <ImageView
                    android:id="@+id/local11"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:onClick="onClick"
                    android:src="@drawable/dongdae"
                    android:text="동대문구" />

                <ImageView
                    android:id="@+id/local12"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:onClick="onClick"
                    android:src="@drawable/dongjak"
                    android:text="동작구" />

                <ImageView
                    android:id="@+id/local13"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:onClick="onClick"
                    android:src="@drawable/mapo"
                    android:text="마포구" />

                <ImageView
                    android:id="@+id/local14"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:onClick="onClick"
                    android:src="@drawable/seodae"
                    android:text="서대문구" />

                <ImageView
                    android:id="@+id/local15"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:onClick="onClick"
                    android:src="@drawable/seocho"
                    android:text="서초구" />

            <ImageView
                    android:id="@+id/local16"
                android:layout_width="115dp"
                android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:onClick="onClick"
                    android:src="@drawable/seongdong"
                    android:text="성동구" />

                <ImageView
                    android:id="@+id/local17"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/seongbuk"
                    android:text="성북구" />

                <ImageView
                    android:id="@+id/local18"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:onClick="onClick"
                    android:src="@drawable/songpa"
                    android:text="송파구" />

                <ImageView
                    android:id="@+id/local19"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:onClick="onClick"
                    android:src="@drawable/yangcheon"
                    android:text="양천구" />

                <ImageView
                    android:id="@+id/local20"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="1"
                    android:layout_row="6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onClick"
                    android:src="@drawable/ydp"
                    android:text="영등포구" />

                <ImageView
                    android:id="@+id/local21"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="2"
                    android:layout_row="6"
                    android:onClick="onClick"
                    android:src="@drawable/yongsan"
                    android:text="용산구" />

                <ImageView
                    android:id="@+id/local22"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:onClick="onClick"
                    android:src="@drawable/ep"
                    android:text="은평구" />

                <ImageView
                    android:id="@+id/local23"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:onClick="onClick"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/jongro"
                    android:text="종로구" />

                <ImageView
                    android:id="@+id/local24"
                    android:onClick="onClick"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_row="7"
                    android:layout_column="2"
                    android:src="@drawable/junggu"
                    android:text="중구" />


            <ImageView
                    android:id="@+id/local25"
                android:layout_width="115dp"
                android:layout_height="115dp"
                    android:onClick="onClick"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/jungrang"
                    android:text="중랑구" />

        </GridLayout>
    </ScrollView>

</LinearLayout>